{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1,
    "sleepApplication": false,
    "buildCommand": "",
    "startCommand": ""
  },
  "environments": {
    "production": {
      "NODE_ENV": "production"
    }
  },
  "variables": {
    "NODE_ENV": "production"
  }
}
